// Q15.Sum of series
#include <stdio.h>

int main() 
{
   int n;
    printf("Enter the value of n:");
    scanf("%d",&n);
    int sum=0;
    int fact=1;
    for(int j=1;j<=n;j++)
    {
     fact=1;
    for(int i=1;i<=j;i++)
    {
       fact=fact*i;
    }
    sum=sum+fact;
    }
    printf("Sum=%d",sum);

    return 0;
}
