/*Diamond Pattern
   * 
  * * 
 * * * 
* * * * 
 * * * 
  * * 
   * 
*/
#include <stdio.h>

int main()
{
    int n=4;
    
    for(int i=1;i<=n;i++)
    {
        for(int k=n-1;k>=i;--k)
        {
            printf(" ");
        }
         for (int j=1;j<=i;++j)
         { 
             
             printf("* ");

         }
         printf("\n");
    }
    int m=3;
    for(int i=m;i>=1;--i)
    {
        for(int k=1;k<=n-i;k++)
        {
            printf(" ");
        }
        for(int j=1;j<=i;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
      return 0;
}
